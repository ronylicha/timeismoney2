APP_NAME="Time Is Money"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=Europe/Paris

APP_LOCALE=fr
APP_FALLBACK_LOCALE=fr
APP_FAKER_LOCALE=fr_FR

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single

# Portail Public de Facturation (PDP)
PDP_ENABLED=false
PDP_MODE=simulation
PDP_BASE_URL=https://sandbox.pdp.dgfip.fr
PDP_OAUTH_URL=https://auth.pdp.dgfip.fr/oauth/token
PDP_CLIENT_ID=your_client_id
PDP_CLIENT_SECRET=your_client_secret
PDP_TIMEOUT=30
PDP_RETRY_ATTEMPTS=3
PDP_RETRY_DELAY=5

# PDP Simulation Settings
PDP_SIMULATION_AUTO_APPROVE=true
PDP_SIMULATION_DELAY=30
PDP_SIMULATION_ERROR_RATE=0

# PDP Webhook Settings
PDP_WEBHOOK_ENABLED=false
PDP_WEBHOOK_URL=
PDP_WEBHOOK_SECRET=
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Chorus Pro Configuration (French Public Invoicing)
CHORUS_PRO_MODE=test
CHORUS_PRO_LOGIN=
CHORUS_PRO_PASSWORD=
CHORUS_PRO_TECH_USER=
CHORUS_PRO_SERVICE_CODE=

# Web Push Notifications (VAPID Keys)
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:noreply@example.com

# NF525 Compliance
NF525_ENABLED=true
NF525_CERTIFICATE_NUMBER=
NF525_CERTIFICATE_ISSUER=

# 2FA Settings
TWO_FACTOR_ENABLED=true
TWO_FACTOR_ISSUER="${APP_NAME}"

# Invoice Settings
INVOICE_PREFIX=INV
INVOICE_NUMBER_LENGTH=6
INVOICE_TAX_RATE=20.0

# Time Tracking
TIME_ENTRY_MIN_DURATION=1
TIME_ENTRY_ROUNDING=15

# Stripe Payment Configuration
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=
STRIPE_CURRENCY=EUR

# Google OAuth & Calendar Configuration
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/api/auth/google/callback"

# Web Push Notifications VAPID Keys
VITE_VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@yourdomain.com
VITE_APP_VERSION=1.0.0

# ====================================
# Horodatage Qualifié NF525
# ====================================

# Activer/désactiver l'horodatage qualifié
TIMESTAMP_ENABLED=true

# Provider : simple (gratuit) | universign | chambersign | certeurope
TIMESTAMP_PROVIDER=simple

# Credentials pour providers payants (laisser vide si provider=simple)
TIMESTAMP_TSA_URL=
TIMESTAMP_API_KEY=
TIMESTAMP_API_SECRET=

# Mode sandbox pour tests (universign uniquement)
TIMESTAMP_SANDBOX=false

# ====================================
# Archivage Légal (10 ans - France)
# ====================================

# Chemin de stockage des archives
ARCHIVE_BASE_PATH=archives

# Disk de stockage (local, s3, etc.)
ARCHIVE_STORAGE_DISK=local

# Durée de rétention en années (10 ans minimum France)
ARCHIVE_RETENTION_YEARS=10

# Archivage automatique activé
ARCHIVE_AUTO_ENABLED=true

# Backup automatique des archives
ARCHIVE_BACKUP_ENABLED=false
ARCHIVE_BACKUP_DISK=s3
ARCHIVE_BACKUP_SCHEDULE=weekly
ARCHIVE_BACKUP_RETENTION=365

# Chiffrement des archives (optionnel)
ARCHIVE_ENCRYPTION_ENABLED=false
ARCHIVE_ENCRYPTION_METHOD=AES-256-CBC
ARCHIVE_ENCRYPTION_KEY=

# Nettoyage automatique des archives expirées (PRUDENCE)
ARCHIVE_CLEANUP_ENABLED=false
ARCHIVE_CLEANUP_GRACE_PERIOD=90

# Alertes d'expiration
ARCHIVE_ALERTS_ENABLED=true

# Vérification d'intégrité
ARCHIVE_INTEGRITY_CHECK_ENABLED=true
ARCHIVE_INTEGRITY_CHECK_SCHEDULE=monthly

# Quotas de stockage par tenant
ARCHIVE_QUOTAS_ENABLED=false
ARCHIVE_MAX_SIZE_GB=100
ARCHIVE_MAX_FILES=100000

# Configuration S3 pour archivage cloud (optionnel)
ARCHIVE_S3_BUCKET=
ARCHIVE_S3_REGION=eu-west-3
ARCHIVE_S3_STORAGE_CLASS=STANDARD_IA

# Limites de performance
ARCHIVE_MAX_FILE_SIZE=50
ARCHIVE_MAX_BATCH_SIZE=100
ARCHIVE_CONCURRENT_UPLOADS=5
