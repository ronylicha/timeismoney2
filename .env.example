APP_NAME="Time Is Money"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=Europe/Paris

APP_LOCALE=fr
APP_FALLBACK_LOCALE=fr
APP_FAKER_LOCALE=fr_FR

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ====================================
# Database Configuration
# ====================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=timeismoney2
DB_USERNAME=root
DB_PASSWORD=

# For SQLite (development)
# DB_CONNECTION=sqlite
# DB_DATABASE=database/database.sqlite

# ====================================
# Session & Cache Configuration
# ====================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ====================================
# Mail Configuration
# ====================================
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ====================================
# AWS S3 Configuration (Optional)
# ====================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ====================================
# Frontend Configuration
# ====================================
VITE_APP_NAME="${APP_NAME}"
VITE_API_URL="${APP_URL}/api"
VITE_APP_VERSION=1.0.0

# ====================================
# Web Push Notifications (VAPID Keys)
# ====================================
# These will be generated automatically by php artisan app:install-production
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VITE_VAPID_PUBLIC_KEY=
VAPID_SUBJECT=mailto:admin@timeismoney.com

# ====================================
# NF525 Compliance (French Tax Law)
# ====================================
NF525_ENABLED=true
NF525_CERTIFICATE_NUMBER=
NF525_CERTIFICATE_ISSUER=

# ====================================
# Two-Factor Authentication
# ====================================
TWO_FACTOR_ENABLED=true
TWO_FACTOR_ISSUER="${APP_NAME}"

# ====================================
# Invoice Settings
# ====================================
INVOICE_PREFIX=INV
INVOICE_NUMBER_LENGTH=6
INVOICE_TAX_RATE=20.0

# ====================================
# Time Tracking Settings
# ====================================
TIME_ENTRY_MIN_DURATION=1
TIME_ENTRY_ROUNDING=15


# ====================================
# Google OAuth & Calendar (Optional)
# ====================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/api/auth/google/callback"

# ====================================
# Archivage Légal (10 ans - France)
# ====================================

# Chemin de stockage des archives
ARCHIVE_BASE_PATH=archives

# Disk de stockage (local, s3, etc.)
ARCHIVE_STORAGE_DISK=local

# Durée de rétention en années (10 ans minimum France)
ARCHIVE_RETENTION_YEARS=10

# Archivage automatique activé
ARCHIVE_AUTO_ENABLED=true

# Backup automatique des archives
ARCHIVE_BACKUP_ENABLED=false
ARCHIVE_BACKUP_DISK=s3
ARCHIVE_BACKUP_SCHEDULE=weekly
ARCHIVE_BACKUP_RETENTION=365

# Chiffrement des archives (optionnel)
ARCHIVE_ENCRYPTION_ENABLED=false
ARCHIVE_ENCRYPTION_METHOD=AES-256-CBC
ARCHIVE_ENCRYPTION_KEY=

# Nettoyage automatique des archives expirées (PRUDENCE)
ARCHIVE_CLEANUP_ENABLED=false
ARCHIVE_CLEANUP_GRACE_PERIOD=90

# Alertes d'expiration
ARCHIVE_ALERTS_ENABLED=true

# Vérification d'intégrité
ARCHIVE_INTEGRITY_CHECK_ENABLED=true
ARCHIVE_INTEGRITY_CHECK_SCHEDULE=monthly

# Quotas de stockage par tenant
ARCHIVE_QUOTAS_ENABLED=false
ARCHIVE_MAX_SIZE_GB=100
ARCHIVE_MAX_FILES=100000

# Configuration S3 pour archivage cloud (optionnel)
ARCHIVE_S3_BUCKET=
ARCHIVE_S3_REGION=eu-west-3
ARCHIVE_S3_STORAGE_CLASS=STANDARD_IA

# Limites de performance
ARCHIVE_MAX_FILE_SIZE=50
ARCHIVE_MAX_BATCH_SIZE=100
ARCHIVE_CONCURRENT_UPLOADS=5

# ====================================
# Signature Électronique eIDAS
# ====================================

# Activer/désactiver la signature électronique
ELECTRONIC_SIGNATURE_ENABLED=true

# Mode : simulation | staging | production
ELECTRONIC_SIGNATURE_MODE=simulation

# Niveau de signature : QES | AES | SES
ELECTRONIC_SIGNATURE_LEVEL=QES

# Configuration certificat (pour production)
ELECTRONIC_SIGNATURE_CERT_PATH=
ELECTRONIC_SIGNATURE_CERT_PASSWORD=
ELECTRONIC_SIGNATURE_KEY_PATH=
ELECTRONIC_SIGNATURE_CA_PATH=

# Informations certificat
ELECTRONIC_SIGNATURE_CN="${APP_NAME}"
ELECTRONIC_SIGNATURE_ORG="${APP_NAME} SAS"
ELECTRONIC_SIGNATURE_OU="Direction Financière"
ELECTRONIC_SIGNATURE_COUNTRY=FR
ELECTRONIC_SIGNATURE_EMAIL=contact@timeismoney.com

# Configuration horodatage qualifié
ELECTRONIC_SIGNATURE_TIMESTAMP_ENABLED=true
ELECTRONIC_SIGNATURE_TIMESTAMP_URL=
ELECTRONIC_SIGNATURE_TIMESTAMP_USER=
ELECTRONIC_SIGNATURE_TIMESTAMP_PASSWORD=
ELECTRONIC_SIGNATURE_HASH_ALGO=sha256
ELECTRONIC_SIGNATURE_REQUIRE_TSA_CERT=true

# ====================================
# HSM Configuration (Hardware Security Module)
# ====================================
# Pour le développement local, utilisez HSM_MODE=simulator
# Pour la production, utilisez HSM_MODE=hardware ou HSM_MODE=cloud

# Mode: simulator | hardware | cloud
HSM_MODE=simulator

# Configuration pour mode hardware
HSM_PROVIDER=
HSM_SLOT=
HSM_PIN=
HSM_LIBRARY_PATH=

# Configuration pour mode cloud (AWS CloudHSM, Azure Key Vault, etc.)
HSM_CLOUD_PROVIDER=
HSM_CLOUD_KEY_ID=
HSM_CLOUD_REGION=
HSM_CLOUD_ACCESS_KEY=
HSM_CLOUD_SECRET_KEY=

# Configuration pour mode simulator (développement uniquement)
HSM_SIMULATOR_KEY_STORAGE=storage/app/hsm-simulator
HSM_SIMULATOR_ENCRYPTION_KEY="${APP_KEY}"

# Limites et sécurité
ELECTRONIC_SIGNATURE_MAX_SIZE=52428800
ELECTRONIC_SIGNATURE_MAX_SIGS=5
ELECTRONIC_SIGNATURE_TIMEOUT=300
ELECTRONIC_SIGNATURE_TIMESTAMP_TIMEOUT=30

# ====================================
# Notes importantes
# ====================================
# 1. Chorus Pro est maintenant configuré par tenant dans la base de données
#    Accédez à Settings > Tenant > Chorus Pro dans l'interface admin
#
# 2. Pour la production, utilisez toujours :
#    - Des certificats SSL valides
#    - Un vrai HSM ou service cloud HSM
#    - Des clés de chiffrement fortes
#    - Un serveur de mail SMTP configuré
#
# 3. Les clés VAPID seront générées automatiquement par :
#    php artisan app:install-production
#
# 4. Pour le développement, vous pouvez utiliser :
#    - SQLite au lieu de MySQL
#    - Mailpit ou log pour les emails
#    - HSM en mode simulator